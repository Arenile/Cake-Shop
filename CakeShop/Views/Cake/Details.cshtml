@model Cake
@{
    ViewData["Title"] = "Details";
}
<h2>@Model.Name</h2>
<br />
<div class="row">
    <div class="col-md-6">
        <img class="img-thumbnail" src="@Model.ImageUrl" alt="@Model.Name" />
        <p></p>
    </div>
    <div class="col-md-6">
        <h4>@Model.Name</h4>
        <p><i>@Model.Price.ToString("c")</i></p>
        <p>@Model.ShortDescription</p>
        <p>@Model.LongDescription</p>
        <!--Here is where we display the calories in the details of each cake! Basically just using the model and outputting the integer as a string. -->
        <p>@Model.Calories.ToString() Calories per slice</p>
        <form asp-action="AddToShoppingCart"
              asp-controller="ShoppingCart"
              asp-route-cakeId="@Model.Id"
              method="post">

            <button class="btn btn-primary buy-now-btn">Add to Cart</button>
        </form>

    </div>
</div>
